<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg">

    <com.lr.sia.mywidget.pulltozoomview.PullToZoomScrollViewEx
        android:id="@+id/person_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/index_top_layout_person"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_item_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="20dp" />

            <TextView
                android:id="@+id/titleText"
                style="@style/title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="@string/mine"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/personal_more_button"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@drawable/more_icon"
                android:paddingLeft="10dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
