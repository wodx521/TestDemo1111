<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/body_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/tradePass"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <com.lr.sia.mywidget.view.PasswordEditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_45"
        android:background="@null"
        android:padding="@dimen/dp_10"
        app:bgColor="@color/gray_text3"
        app:bgCorner="@dimen/dp_1"
        app:divisionLineColor="@color/gray_text3"
        app:divisionLineSize="@dimen/dp_1" />


    <TextView
        android:id="@+id/forget_trade_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="忘记密码?"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/divide_line" />

    <com.lr.sia.mywidget.view.CustomerKeyboard
        android:id="@+id/custom_key_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom" />
</LinearLayout>
