<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yaoqing_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/tuiguang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view5"
            app:layout_constraintWidth_percent="0.85" />

        <TextView
            android:id="@+id/tvRedInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableTop="@drawable/yaoqing_hb"
            android:drawablePadding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/redEnvelopeInvitation"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView7" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/ivUserIcon"
            app:layout_constraintEnd_toEndOf="@id/ivUserIcon"
            app:layout_constraintStart_toStartOf="@id/ivUserIcon"
            app:layout_constraintTop_toTopOf="@id/ivUserIcon" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/head"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTitle"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="@id/cardView7"
            app:layout_constraintStart_toStartOf="@id/cardView7"
            app:layout_constraintTop_toBottomOf="@id/ivUserIcon" />

        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="@id/cardView7"
            app:layout_constraintStart_toStartOf="@id/cardView7"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/cardView7"
            app:layout_constraintStart_toStartOf="@id/cardView7"
            app:layout_constraintTop_toBottomOf="@id/tvUserId"
            app:layout_constraintWidth_percent="0.3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="@string/inviteFriend"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="@id/cardView7"
            app:layout_constraintStart_toStartOf="@id/cardView7"
            app:layout_constraintTop_toBottomOf="@id/ivQRCode" />

        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_white_frame_graybg_round5_1"
            android:padding="@dimen/dp_5"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="@id/cardView7"
            app:layout_constraintStart_toStartOf="@id/cardView7"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintWidth_percent="0.6" />

        <TextView
            android:id="@+id/tvCopyUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/btn_next"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/copyUrl"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="@id/cardView7"
            app:layout_constraintStart_toStartOf="@id/cardView7"
            app:layout_constraintTop_toBottomOf="@id/tvUrl"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/title_item_height"
            android:padding="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:src="@drawable/icon_back1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inviteShare"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>